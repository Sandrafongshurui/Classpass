<div>
   <div> <p><%= selectedDate %></p>
    
    <form>
        <input type="hidden" value="<%= dates.getNextDay(selectedDate) %>" name="date">
        <button type="submit">get next day</button>
     
    </form>
    <!-- selected dat will be the rteurn string format, 
    so need to iso it, to date string, so can compare without time -->

    <% if(new Date(selectedDate).toDateString() === todaysDate.toDateString() || selectedDate === todaysDate ){%>
        <form>
            <input type="hidden" value="<%= todaysDate %>" name="date">
            <button type="submit" disabled>reset</button>
         
        </form>
        <form>
            <input type="hidden" value="<%= dates.getPreviousDay(selectedDate)%>" name="date">
            <button type="submit" disabled>get prev day</button>       
        </form>
    <% }else{ %>
        <form>
            <input type="hidden" value="<%= todaysDate %>" name="date">
            <button type="submit">reset</button>
         
        </form>
        <form>
            <input type="hidden" value="<%= dates.getPreviousDay(selectedDate) %>" name="date">
            <button type="submit">get prev day</button>         
        </form>
    <% } %>
   

    
   </div>
   <%if(authUser === null ){%>
    <!-- not login dun see credits -->
        <% lessons.forEach(item=> { %>            
            <div class="border-bottom d-flex">
                <div class="d-flex view-lessons pt-3 pb-5">
                    <div class="w-50"> <p><%= item.time %>  <br><span><%= item.duration %> min</span></p> </div>
                    <div class="w-100"> <p><%= item.name %>  <br><span><%= item.instructor %></span></p> </div>
                    <div class="w-50">  <button type="button" class="w-100 btn btn-outline-warning" ><a href = "/login">Login To Book</a></button>
            
                    </div>
                </div>         
            </div>
        <% }) %>
        <!-- is log in -->
    <% }else{ %>
        <% lessons.forEach(item=> { %>
           <!-- user had already booked this class-->
            <% if (item.hasBooked) {%>
            <div class="border-bottom d-flex">
                <div class="d-flex view-lessons pt-3 pb-5">
                    <div class="w-50"> <p><%= item.time %>  <br><span><%= item.duration %> min</span></p> </div>
                    <div class="w-100"> <p><%= item.name %>  <br><span><%= item.instructor %></span></p> </div>
                    <div class="w-50">  <button type="button" disabled class="w-100 btn btn-outline-secondary" 
                        onClick="window.location.href='/users/shoppingcart/<%= item._id %>'">
                        <%= item.credits %> credits                       
                    </button>           
                    <span>Booked</span>
                    </div>
                </div>         
            </div>
              <!-- class is full -->
            <% }else if(item.capacity == 10 ){ %>
                <div class="border-bottom d-flex">
                    <div class="d-flex view-lessons pt-3 pb-5">
                        <div class="w-50"> <p><%= item.time %>  <br><span><%= item.duration %> min</span></p> </div>
                        <div class="w-100"> <p><%= item.name %>  <br><span><%= item.instructor %></span></p> </div>
                        <div class="w-50">  <button type="button" disabled class="w-100 btn btn-outline-secondary" 
                            onClick="window.location.href='/users/shoppingcart/<%= item._id %>'">
                            <%= item.credits %> credits                       
                        </button> 
                        <span>Full</span>
                        </div>       
                    </div>         
                </div>
            <% }else {%>
                <div class="border-bottom d-flex">
                    <div class="d-flex view-lessons pt-3 pb-5">
                        <div class="w-50"> <p><%= item.time %>  <br><span><%= item.duration %> min</span></p> </div>
                        <div class="w-100"> <p><%= item.name %>  <br><span><%= item.instructor %></span></p> </div>
                        <div class="w-50">  <button type="button" class="w-100 btn btn-outline-warning" >
                            <a href = "/users/shoppingcart/<%= item._id %>" class="text-warning"><%= item.credits %> credits</a>
                        </button>
                        <span> <%= item.capacity %>/10 pax</span>
                        </div>       
                    </div>         
                </div>
            <% }%>
        <% }) %>
    <% }%>
</div>