<%- include('../partials/header'); %>
    <!-- image and tabs, partial -->
    <div class="my-5 d-flex w-75 mx-auto justify-content-center flex-wrap">
        <section class="view-studio">
            <div>
                <div>
                    <figure><img src="<%= studio.img %>" /></figure>
                </div>
                <nav class="nav info-nav">
                    <%if(tab==="info" ){%>
                        <a class="nav-link active" id="info-tab" href=" /studios/<%= studio._id %>">Info</a>
                        <a class="nav-link" id="lessons-tab" href=" /studios/<%= studio._id %>/lessons">Lessons</a>
                    <%}else{%>
                        <a class="nav-link" id="info-tab" href=" /studios/<%= studio._id %>">Info</a>
                        <a class="nav-link active" id="lessons-tab" href=" /studios/<%= studio._id %>/lessons">Lessons</a>
                    <%}%>
                </nav>
            </div>
        <!-- tab contents (info or lessons)-->
        <%if(tab==="info" ){%>
            <div class="view-studio-tab border-top py-3">
                    <div class="py-3">
                        <h2>
                            <%= studio.name %>
                        </h2>
                        <p>
                            <%= studio.description %>
                        </p>
                    </div>
                    <div class="amenities border-top py-3">
                        <div>
                            <h4>Amenities</h4>
                         
                                <ul class="d-flex w-75 justify-content-between p-0 text-muted mt-3">
                                <% if (studio.amenities.length> 0 ){ %>
                                    <% studio.amenities.forEach(item => { %>
                                        <li> 
                                            <figure><img src="/img/<%= item %>.png"/></figure>
                                            <figure-caption><%= item %></figure-caption>
                                        </li>
        
                                    <%})%>  
                                <% }else{ %>
                                    <li> 
                                        
                                    </li>

                                <% } %>   
                                </ul>   
                           
                        </div>
                    </div>
                    <!-- reviews sections -->
                    <div class="border-top">
                        <!-- rating -->
                        <div class="py-3">
                            <h4>Reviews</h4>
                            <div class="ratings">
                                <span class="rating-num">4.6</span>
                                <div class="stars">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                            </div>
                        </div>
                        <!-- Actual REVIEWS -->
                        <div class="py-3">
                            <!-- only get lesson with reviews -->                                                                                     
                                     <% sortedTotalReviews.forEach(eachReview=> {%>
                                            <div class="reviews-content border-top py-3">
                                                <p class="reviews-content">
                                                    <%= eachReview.name %> with <%= eachReview.instructor %>
                                                </p>
                                            </div>
                                            <div class="d-flex">
                                                <div class="stars">
                                                    <p>
                                                        <%= eachReview.rating %>
                                                    </p>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                </div>
                                                <p class="reviews-content mx-2 ">
                                                    <%= eachReview.dateCreated.toLocaleString().split(",")[0] %>
                                                </p>
                                            </div>
                                            <p class="reviews-content">
                                                <%= eachReview.review %>
                                            </p>
                                    <%})%>                                                                                          
                        </div>
                    </div>
            </div>
       </section>
        <%}else{%>
            <div class="view-studio-tab border-top py-3">
                <div>
                    <h2>
                        All lessons at <%= studio.name %>
                    </h2>
                    <div>
                        <!-- searach nar of lesson types pf the studios -->
                        <%if(selectedDate!==todaysDate){%>
                            <form id="filter-form" method="POST" action="/studios/<%= studio._id %>/lessons/?date=<%= selectedDate %>">
                        <% }else{ %>
                            <form id="filter-form" method="POST" action="/studios/<%= studio._id %>/lessons/">
                        <% } %>
                        
                            <select id="lessons-select" name="options" onchange="submitForm()">
                              
                                    <% for(let i = 0; i < lessonNames.length; i++){%>
                                        <% if(filterOptions !== lessonNames[i]) {%>  
                                            <option  value="<%= lessonNames[i]%>" >
                                                <%= lessonNames[i]%>
                                            </option>
                                        <%}else{%>                                          
                                            <option selected value="<%= lessonNames[i]%>">
                                                <%= lessonNames[i]%>
                                            </option>
                                        <%}%>
                                    <%}%>
                            </select>                          
                        </form>
                    </div>
                </div>
                <div class="calander border-top py-3">               
                    <!-- lesson section -->
                    <%- include('../partials/studios/lessons'); %>        
                </div>  
            </div>
        </section>    
        <%}%>
        
        <!-- address contents, partial-->
        <section>
            <div class=" ">
                <p>
                    <%= studio.address %>
                </p>
            </div>
        </section>
    </div>
<script src="/show.js"></script>
<%- include('../partials/footer'); %>