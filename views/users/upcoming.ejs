<%- include('../partials/header'); %>

    
        <!-- navigation tabs -->
       
            <%- include('../partials/users/users-tabs.ejs'); %>
            
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mx-auto user-tabs">
                <li class="nav-item">
                    <a class="nav-link " aria-current="page" href="/users/profile">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/users/shoppingcart">Shopping Cart</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-warning font-weight-bold" aria-current="page" href="/users/upcoming">Upcoming</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/users/history">History</a>
                </li>
            </ul>
        </div>

    </div>
</nav>
</div>
        
        <div class="card-body w-100">
            <!-- tab contents -->
            <div >
            <% if (lessons.length > 0){%>
                <% lessons.forEach(item=> { %>
                <div class="border-bottom ">
                    <div class="text-center bg-light">
                        <p><%= item.dateOfLesson %></p>
                    </div>                   
                    <div class="d-flex view-lessons pt-3 pb-5">
                        <div class="w-50">
                            <p>
                                <%= item.time %> <br><span>
                                        <%= item.duration %> min
                                    </span>
                            </p>
                        </div>
                        <div class="w-100">
                            <p> <%= item.name %> <br><span><%= item.instructor %></span></p>
                        </div>                      
                        <div class="w-50"> 
                            <form action="/users/upcoming/<%= item._id %>/cancel?_method=DELETE" method="POST">
                                <input class="w-100 btn btn-outline-warning" type="submit" value="Cancel" >          
                            </form>
                        </div>
                    </div>
                </div>
                <% }) %>
            <% }else{ %>
                <div>
                    <p>You have no upcoming classes, find some classes now!</p>
                </div>
                <div>
                    <button type="submit" class="w-100 btn btn-warning btn-rounded btn-block mb-4 text-white"><a
                        href='/studios'>Find Classes</a></button>
                </div>
            <% } %>
            </div>
            
        </div>
    </section>


    </div>
    <%- include('../partials/footer'); %>