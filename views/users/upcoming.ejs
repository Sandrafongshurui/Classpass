<%- include('../partials/header'); %>

    <section class="card shopping-cart d-flex align-items-center mx-auto">
        <!-- navigation tabs -->
        <div >
            <nav id="page-header" class="navbar navbar-expand-lg ">
                <div class="container">

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/products">Shopping Cart</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/about">Upcoming</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/contact">History</a>
                            </li>
                        </ul>
                    </div>

                </div>
            </nav>
        </div>
        <div class="card-body w-100">
            <!-- tab contents -->
            <div >
            <% if (lessons.length > 0){%>
                <% lessons.forEach(item=> { %>
                <div class="border-bottom ">
                    <div class="text-center bg-light">
                        <p><%= item.dateOfLesson %></p>
                    </div>                   
                    <div class="d-flex view-lessons pt-3 pb-5">
                        <div class="w-50">
                            <p>
                                <%= item.time %> <br><span>
                                        <%= item.duration %> min
                                    </span>
                            </p>
                        </div>
                        <div class="w-100">
                            <p> <%= item.name %> <br><span><%= item.instructor %></span></p>
                        </div>                      
                        <div class="w-50"> 
                            <form action="/users/<%= user %>/upcoming/<%= item._id %>/cancel?_method=DELETE" method="POST">
                                <input class="w-100 btn btn-outline-warning" type="submit" value="Cancel" >          
                            </form>
                    </div>
                </div>
                <% }) %>
            <% }else{ %>
                <div>
                    <p>You have no upcoming lessons</p>
                </div>
            <% } %>
            </div>
            
        </div>
    </section>


    </div>
    <%- include('../partials/footer'); %>